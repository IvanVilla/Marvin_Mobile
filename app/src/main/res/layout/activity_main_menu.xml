<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.klaussius.marvin_mobile.MainMenu">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:text="@string/mainMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:layout_marginTop="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvHello"
                android:gravity="center" />

            <Button
                android:text="@string/profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btProfile"
                android:layout_marginTop="30dp"
                android:backgroundTint="@android:color/holo_green_light" />

            <Button
                android:text="@string/futureTournaments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btFutureTournaments"
                android:backgroundTint="@android:color/holo_green_light" />

            <Button
                android:text="@string/inProgressTournaments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btInProgressTournaments"
                android:backgroundTint="@android:color/holo_green_light" />

            <Button
                android:text="@string/btRankings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btRankings"
                android:backgroundTint="@android:color/holo_green_light" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btMessages"
                android:text="@string/messages"
                android:backgroundTint="@android:color/holo_green_light" />

            <Button
                android:text="@string/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btLogOut"
                android:backgroundTint="@android:color/holo_orange_light" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
